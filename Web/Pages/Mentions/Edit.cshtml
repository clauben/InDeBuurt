@page
@model Web.Pages.Mentions.EditModel

@{
    ViewData["Title"] = "Edit";
}

<hr />
<div class="card">
<div class="card-body">
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Mention.ID" />
            <div class="form-group">
                <label asp-for="Mention.Title" class="control-label"></label>
                <input asp-for="Mention.Title" class="form-control" />
                <span asp-validation-for="Mention.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mention.Description" class="control-label"></label>
                <input asp-for="Mention.Description" class="form-control" />
                <span asp-validation-for="Mention.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mention.MentionCategory" class="control-label"></label>
                <select asp-items="@Html.GetEnumSelectList<MentionCategory>()"  class="form-control"></select>
                <span asp-validation-for="Mention.MentionCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
